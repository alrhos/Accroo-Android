<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.accroo.android.fragments.SubCategoryFragment">

    <ImageView
        android:id="@+id/general_category_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/i0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/general_category_name"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:text="@string/general_category"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/Heading"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintLeft_toRightOf="@+id/general_category_icon"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.3" />

    <EditText
        android:id="@+id/sub_category_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:ellipsize="end"
        android:hint="@string/category_name"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="50"
        android:textAppearance="@style/SubHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/general_category_icon"
        app:layout_constraintTop_toBottomOf="@+id/general_category_name" />

    <ImageView
        android:id="@+id/sub_category_arrow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/new_sub_category_icon"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/general_category_icon"
        android:layout_marginStart="30dp"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/submit_sub_category_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button"
        android:elevation="0dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/sub_category_arrow"  />

</android.support.constraint.ConstraintLayout>

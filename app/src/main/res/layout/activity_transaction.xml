    <EditText
        android:id="@+id/add_transaction_date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="Date"
        android:inputType="date"
        android:focusable="false"
        android:cursorVisible="false"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_transaction_category" />

    <EditText
        android:id="@+id/add_transaction_category"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="Sub category"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toRightOf="@+id/add_transaction_category_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_transaction_amount" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/dollar_symbol"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.024"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@android:color/black" />

    <ImageView
        android:id="@+id/add_transaction_category_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/i0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.024"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/date_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/add_transaction_category_icon"
        app:layout_constraintHorizontal_bias="0.02"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@android:color/black"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/edit_icon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@android:color/black"/>

    <Button
        android:id="@+id/submit_transaction_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/add_transaction_amount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_transaction_description"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:hint="Description"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_transaction_date" />


</android.support.constraint.ConstraintLayout>
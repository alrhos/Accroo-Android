<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/transaction_icon"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/transaction_details_layout"
        android:layout_toEndOf="@+id/transaction_icon"
        android:layout_toStartOf="@+id/transaction_category_amount"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_category_name"
            android:textAppearance="@style/Heading"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="3dp"
            android:paddingBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SmallFont"
            android:id="@+id/transaction_category_description"
            android:paddingTop="3dp"
            android:paddingBottom="3dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_category_amount"
        android:textAppearance="@style/Heading"
        android:paddingTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

</RelativeLayout>
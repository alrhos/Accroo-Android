<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.accroo.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.accroo.android.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.accroo.android.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.LaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.accroo.android.activities.RegisterStageOneActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.RegisterStageTwoActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.KeyDecryptionActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.TransactionActivity"
            android:label="@string/title_activity_add_transaction"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="io.accroo.android.activities.SelectSubCategoryActivity"
            android:label="@string/title_activity_select_subcategory"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.CategoryActivity"
            android:label="@string/title_activity_add_category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.accroo.android.activities.SelectIconActivity"
            android:label="@string/title_activity_select_icon"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.EditGeneralCategoryActivity"
            android:label="@string/title_activity_edit_category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="io.accroo.android.activities.SelectGeneralCategoryActivity"
            android:label="@string/title_activity_select_general_category"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.EditSubCategoryActivity"
            android:label="@string/title_activity_edit_category"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.ChangeEmailActivity"
            android:label="@string/title_activity_change_email"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.ChangeLoginPasswordActivity"
            android:label="@string/title_activity_change_login_password"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.ChangeDataPasswordActivity"
            android:label="@string/title_activity_change_data_password"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.accroo.android.activities.LicensesActivity"
            android:label="@string/title_activity_licenses"
            android:screenOrientation="portrait" />
    </application>

</manifest>